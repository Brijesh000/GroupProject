<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="txt_view">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#f0f000</item>
        <item name="android:textSize">50sp</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="txt_box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30sp</item>
        <item name="android:layout_marginTop">24sp</item>
        <item name="android:layout_marginRight">30sp</item>
    </style>

<!--This section only for About us page-->
    <style name="about_img">
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_width">150dp</item>
    </style>

    <style name="about_name">
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingBottom">10sp</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/txt_color</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="about_txt">
        <item name="android:paddingTop">2sp</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:textColor">@color/txt_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="card">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">11dp</item>
    </style>

<!--  end  -->

</resources>